; 1：函数声明区
;--------------------------------------------------------------------------------------------

to hello_world                                  ;定义了函数hello_world 没有参数
   print [hello world!!!]
   localmake "o 1                               ;定义了局部变量o 值为1
   if :o>0  [print [this is if used]]           ;if用法
   ifelse 1=1 [print [如果true:1=1]] [print [否则:2=2]]       ;ifelse用法
end

to hello_world1 :arg                              ;定义了函数hello_world1 参数arg   
   print :arg
end ;
to draw_square                                  ;画正方形
   print [画正方形]
   repeat 4 [                                   ;重复4次
    forward 100                                 ;前100
    right 90                                    ;右90
    ]
end
